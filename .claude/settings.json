{
  "permissions": {
    "defaultMode": "bypassPermissions",
    "allow": [
      "Edit",
      "Write",
      "Task(*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(chmod:*)",
      "Bash(mkdir:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Bash(rm:*)",
      "Bash(cat:*)",
      "Bash(ls:*)",
      "Bash(tree:*)",
      "Bash(bash:*)"
    ]
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/init-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/check-main-branch.sh",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/consent-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/check-protected-edit.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/playbook-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/depends-check.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/check-file-dependencies.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/critic-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/scope-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/executor-guard.sh",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/consent-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/check-protected-edit.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/playbook-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/check-file-dependencies.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/critic-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/scope-guard.sh",
            "timeout": 3000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/executor-guard.sh",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/pre-bash-check.sh",
            "timeout": 10000
          },
          {
            "type": "command",
            "command": "bash .claude/hooks/check-coherence.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/prompt-guard.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-start.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/log-subagent.sh",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/archive-playbook.sh",
            "timeout": 3000
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/session-end.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "bash .claude/hooks/stop-summary.sh",
            "timeout": 3000
          }
        ]
      }
    ]
  }
}
